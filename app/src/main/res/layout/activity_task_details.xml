<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".TaskDetails">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="241dp"
        android:layout_height="264dp"

        android:rotation="@integer/material_motion_duration_medium_2"
        app:layout_constraintBottom_toTopOf="@+id/tvTitleDet"
        app:layout_constraintEnd_toStartOf="@+id/tvAddTask"
        app:srcCompat="@drawable/crystal" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="281dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="136dp"
        android:rotation="150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescDet"
        app:srcCompat="@drawable/crystal" />

    <TextView
        android:id="@+id/tvAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Task Details"
        android:textColor="@color/headingTxt"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleDet"
        android:layout_width="336dp"
        android:layout_height="107dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/textbox"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textColor="@color/headingTxt"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddTask" />

    <TextView
        android:id="@+id/tvDescDet"
        android:layout_width="337dp"
        android:layout_height="238dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/textbox"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textColor="@color/headingTxt"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDet" />

    <TextView
        android:id="@+id/tvPrioritValDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="High"
        android:textColor="#00B8D4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriorityDet"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toEndOf="@+id/tvPriorityDet"
        app:layout_constraintTop_toTopOf="@+id/tvDescDet"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvPriorityDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="180dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Priority:"
        android:textColor="@color/headingTxt"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDescDet" />

    <CheckBox
        android:id="@+id/cbIsCompletedDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Mark As Completed"
        android:textColor="@color/TxtColor2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriorityDet" />

    <Button
        android:id="@+id/btnEditTask"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"

        android:layout_marginBottom="36dp"
        android:backgroundTint="#06E40A"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/btnDeleteTask"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#F30A0A"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEditTask"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#954AFF"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteTask"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="726dp" />


</androidx.constraintlayout.widget.ConstraintLayout>